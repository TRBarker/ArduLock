@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:400,200,700')

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family: 'Roboto', sans-serif;

.header
  background #999
  background-position center


  .page-title
    font-weight 200
    font-size 30px
    text-align center
    padding 5px
    color #fff

.nav
  background #000
  text-align left
  text-align center


  li
    display inline-block

  a
    display inline-block
    padding 20px
    color #fff
    text-decoration none

    &:hover
      background-color #3AB795
      text-decoration underline

.main-content
  margin 50px auto
  max-width 600px

  p
    line-height 1.6
    margin-bottom 1.7

  boxheader
    background #656565
    colour #fff
    max-width 500px
    text-align center

  box
    background #999999
    color #fff
    padding 20px
    text-align center
    align center
    max-width 500px

.footer
  margin 50px auto
  max-width 600px
  border-top 1px solid #444
  padding 20px 0

  p
    color #444
    font-size 12px